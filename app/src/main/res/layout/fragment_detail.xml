<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="120dp"
            android:text="txtNome"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtRepeticao"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtDescricao"
            android:layout_centerHorizontal="true"
            android:text="txtPeso"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
                android:id="@+id/textPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtRepeticao"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" android:layout_toRightOf="@+id/txtRepeticao"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listModificacoes"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
        />

        <TextView
            android:id="@+id/txtLbprogress"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Progresso:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
                android:id="@+id/txtProgress"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/txtLbprogress"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" android:layout_toRightOf="@+id/txtLbprogress"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
